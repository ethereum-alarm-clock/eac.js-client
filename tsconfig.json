{
    "compilerOptions": {
        "suppressImplicitAnyIndexErrors": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "outDir": "./built",
        "allowJs": true,
        "removeComments": true,
        "lib": [
            "es2015"
        ],
        "target": "es2015",
        "moduleResolution": "node",
        "module": "none"
    },
    "include": [
        "./src/**/*",
        "./test/**/*"
    ]
}
